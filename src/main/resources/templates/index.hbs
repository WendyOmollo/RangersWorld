{{#partial "content"}}
    <div class="overlay">
    <div class="container">
        <div class="row">
                    {{#if animals }}
                        {{#each animals}}
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title"><strong>{{ animal.animalName}}</strong></h4>
                                        <p>Found at:{{ sighting.location }}</p>
                                        <p>Reported by:{{ sighting.ranger_name }}</p>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    {{ else }}
                        <p class="text-white">Waiting...</p>
                    {{/if}}


            <div class="col-md-4">

            </div>
            <div class="col-md-4">

            </div>
            </div>
        </div>
    </div>
{{/partial}}
{{> layout.hbs}}